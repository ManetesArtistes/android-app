<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.simon_says.MainActivitySimonSays">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/simonFull"
            android:layout_height="@dimen/simonFull"
            android:background="@drawable/simon_says_full_on"
            android:contentDescription="@string/simon_says_full">
        </ImageView>

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="50sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:cornerRadius="15dp"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            android:fontFamily="@font/itim">
        </Button>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>