<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.simon_says.activities.MainActivitySimonSays">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/background_black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simonHead"
            android:gravity="center_vertical">

            <include layout="@layout/back_button"
                android:layout_width="@dimen/backButton"
                android:layout_height="@dimen/backButton"
                android:layout_marginHorizontal="@dimen/backButtonMargin"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/simonFull"
            android:layout_height="@dimen/simonFull"
            android:background="@drawable/simon_says_full_on"
            android:contentDescription="@string/simon_says_full">
        </ImageView>

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:layout_margin="25dp"
            android:contentDescription="@string/play">
        </ImageButton>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>